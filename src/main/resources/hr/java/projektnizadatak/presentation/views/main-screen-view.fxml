		<StackPane GridPane.rowIndex="4">
			<TimetableDay fx:id="monday" title="Monday" onItemSelected="#showItemDetails"/>
			<Label fx:id="mondayHolidayText"/>
		</StackPane>
		<StackPane GridPane.columnIndex="1" GridPane.rowIndex="4">
			<TimetableDay fx:id="tuesday" title="Tuesday" onItemSelected="#showItemDetails"/>
			<Label fx:id="tuesdayHolidayText"/>
		</StackPane>
		<StackPane GridPane.columnIndex="2" GridPane.rowIndex="4">
			<TimetableDay fx:id="wednesday" title="Wednesday" onItemSelected="#showItemDetails"/>
			<Label fx:id="wednesdayHolidayText"/>
		</StackPane>
		<StackPane GridPane.columnIndex="3" GridPane.rowIndex="4">
			<TimetableDay fx:id="thursday" title="Thursday" onItemSelected="#showItemDetails"/>
			<Label fx:id="thursdayHolidayText"/>
		</StackPane>
		<StackPane GridPane.columnIndex="4" GridPane.rowIndex="4">
			<TimetableDay fx:id="friday" title="Friday" onItemSelected="#showItemDetails"/>
			<Label fx:id="fridayHolidayText"/>
		</StackPane>
		<VBox GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowSpan="4">
			<Label fx:id="detailsLabel"/>

			<style>
				-fx-border-color: #b5b5b5;
				-fx-border-radius: 3px;
				-fx-padding: 4px;
			</style>
		</VBox>
	</GridPane>
</GridPane>
